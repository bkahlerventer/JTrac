<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="userForm">

    <view-state id="userForm" view="user_form">
        <entry-actions>
            <action bean="userFormAction" method="setupForm"/>
        </entry-actions>
        <transition on="submit" to="userAllocateSpace">
            <action bean="userFormAction" method="bindAndValidate"/>
            <action bean="userFormAction" method="userFormHandler"/>
        </transition>
    </view-state>  
    
    <subflow-state id="userAllocateSpace" flow="userAllocate-flow">
        <attribute-mapper>
            <input-mapping value="${flowScope.user}" as="user"/>
        </attribute-mapper>
        <transition on="dashboardView" to="dashboardView"/>
    </subflow-state>
    
    <end-state id="dashboardView" view="externalRedirect:dashboard.htm"/>

</flow>

