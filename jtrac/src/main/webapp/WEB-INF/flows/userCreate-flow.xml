<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="userForm">

    <view-state id="userForm" view="user_form">
        <entry-actions>
            <action bean="userFormAction" method="setupForm"/>
        </entry-actions>
        <transition on="submit" to="userAllocateSpace">
            <action bean="userFormAction" method="bindAndValidate"/>
            <action bean="userFormAction" method="userFormHandler"/>
        </transition>
    </view-state>  

    <view-state id="userAllocateSpace" view="user_allocate_space">
        <entry-actions>
            <action bean="userFormAction" method="userAllocateSpaceSetup"/>
        </entry-actions>
        <transition on="next" to="userAllocateSpaceRole"/>
    </view-state>  
    
    <view-state id="userAllocateSpaceRole" view="user_allocate_space_role">
        <entry-actions>
            <action bean="userFormAction" method="userAllocateSpaceRoleSetup"/>
        </entry-actions>
        <transition on="save" to="userListView">
            <action bean="userFormAction" method="userAllocateHandler"/>
            <action bean="userFormAction" method="userListViewSetup"/>
        </transition>
    </view-state>    
    
    <end-state id="userListView" view="user_list"/>

</flow>

